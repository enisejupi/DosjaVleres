@model IEnumerable<KosovaDoganaModerne.Modelet.Entitetet.VleraProduktit>

@{
    ViewData["Title"] = "Dogana e Kosovës - dosja me të dhënat e disponueshme 2025";
}

<div class="container-fluid mt-3">
    <!-- Koka e faqes -->
    <div class="row mb-3">
        <div class="col-12">
            <h3 class="text-primary text-center">Dogana e Kosovës - dosja me të dhënat e disponueshme 2025</h3>
            <div class="text-center mb-3">
                <a href="@Url.Action("Index", "Home")" class="btn btn-link">
                    <i class="fas fa-arrow-left"></i> Kthimi ne faqen intranet
                </a>
            </div>
            <div class="text-center mb-2">
                <span class="me-3"><strong>Shpenzimet e transportit</strong></span>
                <span class="me-3"><strong>Baza ligjore</strong></span>
                <span class="me-3"><strong>Vendimi për shpenzime</strong></span>
            </div>
        </div>
    </div>

    <!-- Mesazhet e suksesit/gabimit -->
    @if (TempData["Sukses"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["Sukses"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Gabim"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle"></i> @TempData["Gabim"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Forma e kërkimit -->
    <div class="card mb-3">
        <div class="card-body">
            <form method="get" asp-action="Index">
                <div class="row g-2">
                    <div class="col-md-3">
                        <label for="kerko" class="form-label"><strong>Kërko</strong></label>
                        <input type="text" 
                               class="form-control" 
                               id="kerko" 
                               name="kerko" 
                               value="@ViewData["Kerko"]"
                               placeholder="Kërko...">
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">&nbsp;</label><br />
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="llojiKerkimit" id="frazeEsakte" value="frazeEsakte" 
                                   @(ViewData["LlojiKerkimit"]?.ToString() == "frazeEsakte" ? "checked" : "")>
                            <label class="form-check-label" for="frazeEsakte">Frazën e saktë</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="llojiKerkimit" id="tgjithaFjalet" value="tgjithaFjalet"
                                   @(ViewData["LlojiKerkimit"]?.ToString() == "tgjithaFjalet" ? "checked" : "")>
                            <label class="form-check-label" for="tgjithaFjalet">Të gjitha fjalët</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="llojiKerkimit" id="cdoFjale" value="cdoFjale"
                                   @(ViewData["LlojiKerkimit"]?.ToString() == "cdoFjale" || string.IsNullOrEmpty(ViewData["LlojiKerkimit"]?.ToString()) ? "checked" : "")>
                            <label class="form-check-label" for="cdoFjale">Çdo fjalë</label>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">&nbsp;</label>
                        <div>
                            <button type="submit" class="btn btn-primary w-100">
                                <i class="fas fa-search"></i> Kërko
                            </button>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">&nbsp;</label>
                        <div>
                            <a asp-action="Index" class="btn btn-secondary w-100">
                                Trego të gjitha
                            </a>
                        </div>
                    </div>
                    <div class="col-md-2 text-end">
                        <label class="form-label">&nbsp;</label>
                        <div>
                            <a asp-action="Krijo" class="btn btn-success w-100">
                                <i class="fas fa-plus"></i> Shto të ri
                            </a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Tabela e produkteve -->
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">
                <i class="fas fa-list"></i> Lista e vlerave të produkteve
            </h5>
        </div>
        <div class="card-body p-0">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover table-sm mb-0">
                        <thead class="table-light">
                            <tr>
                                <th style="width: 50px;">id</th>
                                <th style="width: 60px;">Foto</th>
                                <th style="width: 80px;">kodi (*)</th>
                                <th>Përshkrimi (*)</th>
                                <th style="width: 120px;">Origjina (*)</th>
                                <th style="width: 80px;">Pariteti</th>
                                <th style="width: 80px;">Njësia</th>
                                <th style="width: 150px;">Çmimi</th>
                                <th style="width: 70px;">Valuta</th>
                                <th style="width: 120px;">Kategoria (*)</th>
                                <th style="width: 150px;">Komentet e Degëve</th>
                                <th style="width: 150px;" class="text-center">Veprimet</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{int rowNum = 1;}
                            @foreach (var item in Model)
                            {
                                <tr class="@(item.Eshte_Aktiv ? "" : "table-secondary")">
                                    <td class="text-center">@rowNum</td>
                                    <td class="text-center">
                                        @if (!string.IsNullOrEmpty(item.Bashkangjitje))
                                        {
                                            var extension = System.IO.Path.GetExtension(item.Bashkangjitje)?.ToLowerInvariant();
                                            var isImage = new[] { ".jpg", ".jpeg", ".png", ".gif", ".bmp" }.Contains(extension);
                                            
                                            if (isImage)
                                            {
                                                <img src="@item.Bashkangjitje" 
                                                     alt="@item.EmriProduktit" 
                                                     class="img-thumbnail" 
                                                     style="max-width: 50px; max-height: 50px; cursor: pointer;"
                                                     onclick="shfaqImazhin('@item.Bashkangjitje', '@item.EmriProduktit')"
                                                     title="Kliko për ta zmadhuar" />
                                            }
                                            else
                                            {
                                                <a href="@item.Bashkangjitje" target="_blank" title="Shkarko bashkëngjitjen">
                                                    <i class="fas fa-file fa-2x text-primary"></i>
                                                </a>
                                            }
                                        }
                                        else
                                        {
                                            <i class="fas fa-image fa-2x text-muted"></i>
                                        }
                                    </td>
                                    <td><strong>@item.Kodi</strong></td>
                                    <td>@item.Pershkrimi</td>
                                    <td>@item.Origjina</td>
                                    <td>@(item.Pariteti ?? "-")</td>
                                    <td>@item.Njesia</td>
                                    <td>@(item.Cmimi ?? "-")</td>
                                    <td>@item.Valuta</td>
                                    <td>
                                        <span class="badge bg-secondary">@item.Kategoria</span>
                                    </td>
                                    <td class="text-center">
                                        @{
                                            var komentetPerProdukt = ViewBag.KomentetPerProdukt as Dictionary<int, List<KosovaDoganaModerne.Modelet.Entitetet.KomentiDeges>>;
                                            var komentet = komentetPerProdukt?.ContainsKey(item.Id) == true ? komentetPerProdukt[item.Id] : new List<KosovaDoganaModerne.Modelet.Entitetet.KomentiDeges>();
                                            var numriKomenteve = komentet.Count;
                                            var paLexuara = komentet.Count(k => !k.EshteLexuar);
                                        }
                                        
                                        @if (numriKomenteve > 0)
                                        {
                                            <button type="button" class="btn btn-sm btn-info" 
                                                    onclick="shfaqKomentet(@item.Id, '@item.Kodi')"
                                                    title="Shiko komentet">
                                                <i class="fas fa-comments"></i> @numriKomenteve
                                                @if (paLexuara > 0)
                                                {
                                                    <span class="badge bg-warning text-dark">@paLexuara të reja</span>
                                                }
                                            </button>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                        <br />
                                        <button type="button" class="btn btn-sm btn-primary mt-1" 
                                                onclick="hapModalinShtoKoment(@item.Id, '@item.Kodi')"
                                                title="Shto koment">
                                            <i class="fas fa-plus"></i> Shto koment
                                        </button>
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <a asp-action="Detajet" 
                                               asp-route-id="@item.Id" 
                                               class="btn btn-sm btn-info"
                                               title="Shiko detajet">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-action="Historia" 
                                               asp-route-id="@item.Id" 
                                               class="btn btn-sm btn-secondary"
                                               title="Shiko historinë">
                                                <i class="fas fa-history"></i>
                                            </a>
                                            <a asp-action="Perditeso" 
                                               asp-route-id="@item.Id" 
                                               class="btn btn-sm btn-warning"
                                               title="Përditesë">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="Fshi" 
                                               asp-route-id="@item.Id" 
                                               class="btn btn-sm btn-danger"
                                               title="Fshi">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                                rowNum++;
                            }
                        </tbody>
                    </table>
                </div>
            
                <div class="card-footer">
                    <p class="mb-0 text-center">
                        <small>Shënimet 1 to @Model.Count() nga @Model.Count()</small>
                    </p>
                </div>
            }
            else
            {
                <div class="alert alert-info text-center m-3">
                    <i class="fas fa-info-circle fa-3x mb-3"></i>
                    <h5>Nuk ka produkte të regjistruara</h5>
                    <p>Filloni duke shtuar produktin e parë doganor.</p>
                    <a asp-action="Krijo" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Shto produktin e parë
                    </a>
                </div>
            }
        </div>
    </div>
</div>

<!-- Modal për shtim komenti (një modal i vetëm për të gjithë produktet) -->
<div class="modal fade" id="shtoKomentModal" tabindex="-1" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="shtoKomentForm" method="post" asp-action="ShtoKoment">
                <div class="modal-header bg-success text-white">
                    <h5 class="modal-title">
                        <i class="fas fa-plus-circle"></i> Shto koment të ri për degën
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="id" id="produktId" />
                    <div class="mb-3">
                        <label class="form-label"><strong>Emri i degës:</strong></label>
                        <select name="emriDeges" id="emriDeges" class="form-select" required>
                            <option value="">-- Zgjedh degën --</option>
                            <option value="Prishtinë">Prishtinë</option>
                            <option value="Pejë">Pejë</option>
                            <option value="Prizren">Prizren</option>
                            <option value="Gjilan">Gjilan</option>
                            <option value="Mitrovicë">Mitrovicë</option>
                            <option value="Gjakovë">Gjakovë</option>
                            <option value="Podujevë">Podujevë</option>
                            <option value="Ferizaj">Ferizaj</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label"><strong>Kodi tarifar:</strong></label>
                        <input type="text" id="kodiTarifarDisplay" class="form-control" readonly />
                    </div>
                    <div class="mb-3">
                        <label class="form-label"><strong>Mesazhi i komentit:</strong></label>
                        <textarea name="komentPerdoruesit" id="komentPerdoruesit" class="form-control" rows="5" required></textarea>
                        <small class="text-muted">
                            Ky koment do të shfaqet në sistemin e komenteve të degëve dhe do të lidhet me këtë produkt.
                        </small>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Anulo</button>
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-paper-plane"></i> Dërgo koment
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Modal për shfaqjen e komenteve (një modal i vetëm) -->
<div class="modal fade" id="komentetModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">
                    <i class="fas fa-comments"></i> Komentet e degëve për produktin: <span id="komentetKodiTarifar"></span>
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="komentetContent">
                <div class="text-center py-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Duke ngarkuar...</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal për shfaqjen e imazhit -->
<div class="modal fade" id="imazhiModal" tabindex="-1">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header bg-dark text-white">
                <h5 class="modal-title" id="imazhiModalTitull">
                    <i class="fas fa-image"></i> Imazhi i produktit
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body text-center" style="background-color: #f8f9fa;">
                <img id="imazhiModalImg" src="" alt="" class="img-fluid" style="max-height: 80vh;" />
            </div>
            <div class="modal-footer">
                <a id="imazhiModalShkarko" href="" download class="btn btn-primary">
                    <i class="fas fa-download"></i> Shkarko imazhin
                </a>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Mbyll</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <script>
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 5000);

        // Funksion për të hapur modalin e shtimit të komentit
        function hapModalinShtoKoment(produktId, kodiTarifar) {
            // Vendos vlerat në modal
            document.getElementById('produktId').value = produktId;
            document.getElementById('kodiTarifarDisplay').value = kodiTarifar;
            
            // Pastro fushat
            document.getElementById('emriDeges').value = '';
            document.getElementById('komentPerdoruesit').value = '';
            
            // Hap modalin
            var modal = new bootstrap.Modal(document.getElementById('shtoKomentModal'));
            modal.show();
        }

        // Funksion për të shfaqur imazhin në modal
        function shfaqImazhin(url, emri) {
            document.getElementById('imazhiModalTitull').innerHTML = '<i class="fas fa-image"></i> ' + emri;
            document.getElementById('imazhiModalImg').src = url;
            document.getElementById('imazhiModalImg').alt = emri;
            document.getElementById('imazhiModalShkarko').href = url;
            
            var modal = new bootstrap.Modal(document.getElementById('imazhiModal'));
            modal.show();
        }

        // Funksion për të shfaqur komentet
        function shfaqKomentet(produktId, kodiTarifar) {
            // Vendos kodin tarifar në titull
            document.getElementById('komentetKodiTarifar').textContent = kodiTarifar;
            
            // Shfaq loading
            document.getElementById('komentetContent').innerHTML = `
                <div class="text-center py-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Duke ngarkuar...</span>
                    </div>
                </div>
            `;
            
            // Hap modalin
            var modal = new bootstrap.Modal(document.getElementById('komentetModal'));
            modal.show();
            
            // Ngarko komentet me AJAX
            fetch('/api/komentet/' + produktId)
                .then(response => response.json())
                .then(data => {
                    if (data.length === 0) {
                        document.getElementById('komentetContent').innerHTML = `
                            <p class="text-muted text-center py-5">Nuk ka komente për këtë produkt.</p>
                        `;
                        return;
                    }
                    
                    let html = '';
                    data.forEach(koment => {
                        html += `
                            <div class="card mb-3 ${koment.eshteLexuar ? '' : 'border-primary'}">
                                <div class="card-header ${koment.eshteLexuar ? 'bg-light' : 'bg-primary text-white'}">
                                    <div class="d-flex justify-content-between">
                                        <div>
                                            <strong><i class="fas fa-building"></i> ${koment.emriDeges}</strong>
                                            ${!koment.eshteLexuar ? '<span class="badge bg-warning text-dark ms-2">i ri</span>' : ''}
                                            ${koment.eshteZgjidhur ? '<span class="badge bg-success ms-2">✓ Zgjidhur</span>' : ''}
                                        </div>
                                        <small>${new Date(koment.dataDergimit).toLocaleString('sq-AL')}</small>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <p>${koment.mesazhi}</p>
                                    ${koment.pergjigja ? `
                                        <div class="alert alert-success mb-0 mt-2">
                                            <strong><i class="fas fa-reply"></i> Përgjigje:</strong>
                                            <p class="mb-1 mt-2">${koment.pergjigja}</p>
                                            ${koment.dataPergjigjes ? `
                                                <small class="text-muted">
                                                    ${new Date(koment.dataPergjigjes).toLocaleString('sq-AL')} - ${koment.pergjigjetNga}
                                                </small>
                                            ` : ''}
                                        </div>
                                    ` : ''}
                                </div>
                                <div class="card-footer">
                                    <small class="text-muted">
                                        Dërguar nga: ${koment.dergoPrejNga}
                                        <a href="/KomentetDegeve/Detajet/${koment.id}" 
                                           class="btn btn-sm btn-outline-primary float-end"
                                           target="_blank">
                                            <i class="fas fa-external-link-alt"></i> Shiko në komentet e degëve
                                        </a>
                                    </small>
                                </div>
                            </div>
                        `;
                    });
                    
                    document.getElementById('komentetContent').innerHTML = html;
                })
                .catch(error => {
                    console.error('Error:', error);
                    document.getElementById('komentetContent').innerHTML = `
                        <div class="alert alert-danger">
                            <i class="fas fa-exclamation-triangle"></i> Gabim gjatë ngarkimit të komenteve.
                        </div>
                    `;
                });
        }
    </script>
}
