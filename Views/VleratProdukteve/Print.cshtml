            }
        }

        body {
            font-family: 'Arial', sans-serif;
            font-size: 11pt;
            color: #000;
            margin: 0;
            padding: 20px;
            background: white;
        }

        .document-header {
            border: 2px solid #000;
            padding: 15px;
            margin-bottom: 20px;
            background-color: #f8f9fa;
        }

        .document-header h1 {
            text-align: center;
            margin: 0 0 10px 0;
            font-size: 18pt;
            color: #1e3c72;
            text-transform: uppercase;
        }

        .header-info {
            display: flex;
            justify-content: space-between;
            margin-top: 10px;
            font-size: 9pt;
        }

        .document-number {
            text-align: right;
            font-weight: bold;
            margin: 10px 0;
        }

        .section {
            margin-bottom: 20px;
            border: 1px solid #dee2e6;
            padding: 15px;
        }

        .section-title {
            background-color: #1e3c72;
            color: white;
            padding: 8px 12px;
            margin: -15px -15px 15px -15px;
            font-weight: bold;
            font-size: 12pt;
        }

        .field-row {
            display: flex;
            margin-bottom: 10px;
            border-bottom: 1px dotted #ccc;
            padding-bottom: 8px;
        }

        .field-label {
            font-weight: bold;
            width: 200px;
            flex-shrink: 0;
        }

        .field-value {
            flex: 1;
        }

        .signature-section {
            margin-top: 40px;
            display: flex;
            justify-content: space-between;
        }

        .signature-box {
            width: 45%;
            text-align: center;
        }

        .signature-line {
            border-top: 1px solid #000;
            margin-top: 60px;
            padding-top: 5px;
        }

        .footer-info {
