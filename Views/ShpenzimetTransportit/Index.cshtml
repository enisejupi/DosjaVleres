@model IEnumerable<KosovaDoganaModerne.Modelet.Entitetet.ShpenzimiTransportit>

@{
    ViewData["Title"] = "Shpenzimet e transportit";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-truck"></i> Shpenzimet e transportit</h2>
        <a asp-action="Krijo" class="btn btn-success">
            <i class="fas fa-plus"></i> Shto shpenzim të ri
        </a>
    </div>

    <form asp-action="Index" method="get" class="card mb-4">
        <div class="card-body">
            <div class="row">
                <div class="col-md-3">
                    <label>Vendi i origjinës</label>
                    <input type="text" name="vendiOrigjines" value="@ViewData["VendiOrigjines"]" class="form-control" placeholder="p.sh. Turqi" />
                </div>
                <div class="col-md-3">
                    <label>Vendi i destinacionit</label>
                    <input type="text" name="vendiDestinacionit" value="@ViewData["VendiDestinacionit"]" class="form-control" placeholder="p.sh. Kosovë" />
                </div>
                <div class="col-md-3">
                    <label>Lloji i transportit</label>
                    <select name="llojiTransportit" class="form-control">
                        <option value="">-- Të gjitha --</option>
                        <option value="Tokësor">Tokësor</option>
                        <option value="Ajror">Ajror</option>
                        <option value="Detar">Detar</option>
                        <option value="Hekurudhor">Hekurudhor</option>
                    </select>
                </div>
                <div class="col-md-3 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-search"></i> Kërko
                    </button>
                </div>
            </div>
        </div>
    </form>

    @if (Model.Any())
    {
        <div class="card">
            <div class="card-body">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>origjina</th>
                            <th>destinacioni</th>
                            <th>lloji</th>
                            <th>çmimi</th>
                            <th>valuta</th>
                            <th>njësia</th>
                            <th>krijuar nga</th>
                            <th>veprime</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.VendiOrigjines</td>
                                <td>@item.VendiDestinacionit</td>
                                <td><span class="badge bg-info">@item.LlojiTransportit</span></td>
                                <td>@item.CmimiPerNjesi.ToString("N2")</td>
                                <td>@item.Valuta</td>
                                <td>@item.NjesiaMatese</td>
                                <td>@item.KrijuarNga</td>
                                <td>
                                    <a asp-action="Detajet" asp-route-id="@item.Id" class="btn btn-sm btn-info" title="Detajet">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a asp-action="Perditeso" asp-route-id="@item.Id" class="btn btn-sm btn-warning" title="Përditesë">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Fshi" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="Fshi">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle"></i> Nuk ka shpenzime transporti të regjistruara. Klikoni "Shto shpenzim të ri" për të shtuar.
        </div>
    }
</div>
