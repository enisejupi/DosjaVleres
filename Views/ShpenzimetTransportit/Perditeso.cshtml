@model KosovaDoganaModerne.Modelet.Entitetet.ShpenzimiTransportit

@{
    ViewData["Title"] = "Përditëso Shpenzimin";
}

<div class="container mt-4">
    <h2><i class="fas fa-edit"></i> Përditëso Shpenzimin e Transportit</h2>
    
    <form asp-action="Perditeso" method="post" class="mt-4">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="KrijuarNga" />
        <input type="hidden" asp-for="DataKrijimit" />
        
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="VendiOrigjines" class="form-label"></label>
                            <input asp-for="VendiOrigjines" class="form-control" />
                            <span asp-validation-for="VendiOrigjines" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="VendiDestinacionit" class="form-label"></label>
                            <input asp-for="VendiDestinacionit" class="form-control" />
                            <span asp-validation-for="VendiDestinacionit" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label asp-for="LlojiTransportit" class="form-label"></label>
                            <select asp-for="LlojiTransportit" class="form-control">
                                <option value="">-- Zgjidhni --</option>
                                <option value="Tokësor">Tokësor</option>
                                <option value="Ajror">Ajror</option>
                                <option value="Detar">Detar</option>
                                <option value="Hekurudhor">Hekurudhor</option>
                            </select>
                            <span asp-validation-for="LlojiTransportit" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label asp-for="CmimiPerNjesi" class="form-label"></label>
                            <input asp-for="CmimiPerNjesi" class="form-control" type="number" step="0.01" />
                            <span asp-validation-for="CmimiPerNjesi" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="mb-3">
                            <label asp-for="Valuta" class="form-label"></label>
                            <select asp-for="Valuta" class="form-control">
                                <option value="EUR">EUR</option>
                                <option value="USD">USD</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="mb-3">
                            <label asp-for="NjesiaMatese" class="form-label"></label>
                            <select asp-for="NjesiaMatese" class="form-control">
                                <option value="KG">KG</option>
                                <option value="TON">TON</option>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Shenime" class="form-label"></label>
                    <textarea asp-for="Shenime" class="form-control" rows="3"></textarea>
                </div>

                <div class="mb-3 form-check">
                    <input asp-for="Aktiv" class="form-check-input" type="checkbox" />
                    <label asp-for="Aktiv" class="form-check-label"></label>
                </div>

                <div class="alert alert-info">
                    <small>
                        <strong>Krijuar:</strong> @Model.DataKrijimit.ToString("dd/MM/yyyy HH:mm") nga @Model.KrijuarNga<br />
                        @if (Model.DataPerditesimit.HasValue)
                        {
                            <strong>Përditësuar:</strong> @Model.DataPerditesimit.Value.ToString("dd/MM/yyyy HH:mm") <text>nga</text> @Model.PerditesoPrejNga
                        }
                    </small>
                </div>

                <div class="d-flex justify-content-end gap-2">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-times"></i> Anulo
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Përditëso
                    </button>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
