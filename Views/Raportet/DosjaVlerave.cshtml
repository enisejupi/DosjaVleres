@model IEnumerable<KosovaDoganaModerne.Modelet.Entitetet.VleraProduktit>

@{
    ViewData["Title"] = "Dosja e Vlerave - Raport";
    var dataFillimit = ViewData["DataFillimit"] as DateTime?;
    var dataMbarimit = ViewData["DataMbarimit"] as DateTime?;
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2><i class="fas fa-folder-open"></i> Dosja e vlerave të produkteve</h2>
            <p class="text-muted mb-0">
                @if (dataFillimit.HasValue && dataMbarimit.HasValue)
                {
                    <text>Periudha: @dataFillimit.Value.ToString("dd/MM/yyyy") - @dataMbarimit.Value.ToString("dd/MM/yyyy")</text>
                }
                else
                {
                    <text>Të gjitha vlerat tarifore</text>
                }
            </p>
        </div>
        <div>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Kthehu
            </a>
            <a asp-action="DosjaVlerave_Excel" asp-route-kategoria="@ViewData["Kategoria"]" asp-route-origjina="@ViewData["Origjina"]" class="btn btn-success">
                <i class="fas fa-file-excel"></i> Eksporto në Excel
            </a>
            <button onclick="window.print()" class="btn btn-primary">
                <i class="fas fa-print"></i> Printo
            </button>
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Nr.</th>
                                <th>Kodi tarifor</th>
                                <th>Emri i produktit</th>
                                <th>Vlera</th>
                                <th>Njësia matëse</th>
                                <th>Burimi</th>
                                <th>Data e regjistrimit</th>
                                <th>Statusi</th>
                                <th>Ndryshime</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{ var nr = 1; }
                            @foreach (var vlera in Model)
                            {
                                <tr>
                                    <td>@nr</td>
                                    <td><strong>@vlera.KodiTarifar</strong></td>
                                    <td>@vlera.EmriProduktit</td>
                                    <td>@vlera.Vlera.ToString("N2") @vlera.Valuta</td>
                                    <td>@vlera.NjesiaMatese</td>
                                    <td><small>@vlera.BurimiInformacionit</small></td>
                                    <td>@vlera.DataRegjistrimit.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        @if (vlera.Aktiv)
                                        {
                                            <span class="badge bg-success">Aktiv</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Joaktiv</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        @if (vlera.Historia != null && vlera.Historia.Any())
                                        {
                                            <span class="badge bg-info">@vlera.Historia.Count()</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                </tr>
                                nr++;
                            }
                        </tbody>
                        <tfoot>
                            <tr class="table-secondary">
                                <td colspan="9">
                                    <strong>Totali i vlerave:</strong> @Model.Count() produkte
                                </td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>

        <div class="mt-3">
            <small class="text-muted">
                Gjeneruar më: @DateTime.Now.ToString("dd/MM/yyyy HH:mm:ss")
            </small>
        </div>
    }
    else
    {
        <div class="alert alert-warning">
            <i class="fas fa-exclamation-triangle"></i> Nuk ka të dhëna për periudhën e zgjedhur.
        </div>
    }
</div>

<style>
    @@media print {
        .btn, .d-flex .btn-secondary, .d-flex .btn-primary { display: none !important; }
        body { font-size: 12px; }
        .table { font-size: 11px; }
    }
</style>
