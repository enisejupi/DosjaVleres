@model IEnumerable<KosovaDoganaModerne.Modelet.Entitetet.HistoriaVlerave>

@{
    ViewData["Title"] = "Lista e ndryshimeve - Raport";
    var kodiTarifar = ViewData["KodiTarifar"] as string;
    var perdoruesi = ViewData["Perdoruesi"] as string;
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2><i class="fas fa-history"></i> Lista e ndryshimeve në vlera</h2>
            <p class="text-muted mb-0">
                @if (!string.IsNullOrWhiteSpace(kodiTarifar))
                {
                    <text>Kodi Tarifar: @kodiTarifar</text>
                }
                @if (!string.IsNullOrWhiteSpace(perdoruesi))
                {
                    <text> | Përdoruesi: @perdoruesi</text>
                }
            </p>
        </div>
        <div>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Kthehu
            </a>
            <button onclick="window.print()" class="btn btn-info">
                <i class="fas fa-print"></i> Printo
            </button>
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover table-sm">
                        <thead class="table-info">
                            <tr>
                                <th>Nr.</th>
                                <th>Data</th>
                                <th>Kodi tarifar</th>
                                <th>Fusha</th>
                                <th>Vlera e vjetër</th>
                                <th>Vlera e re</th>
                                <th>Përdoruesi</th>
                                <th>Arsyeja</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{ var nr = 1; }
                            @foreach (var ndryshim in Model.OrderByDescending(n => n.DataNdryshimit))
                            {
                                <tr>
                                    <td>@nr</td>
                                    <td>@ndryshim.DataNdryshimit.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td><strong>@ndryshim.VleraProduktit?.KodiTarifar</strong></td>
                                    <td><span class="badge bg-secondary">@ndryshim.FushaENdryshuar</span></td>
                                    <td>@ndryshim.VleraVjeter</td>
                                    <td><strong class="text-primary">@ndryshim.VleraRe</strong></td>
                                    <td>@ndryshim.Perdoruesi</td>
                                    <td><small>@ndryshim.Arsyeja</small></td>
                                </tr>
                                nr++;
                            }
                        </tbody>
                        <tfoot>
                            <tr class="table-light">
                                <td colspan="8">
                                    <strong>Totali i ndryshimeve:</strong> @Model.Count()
                                </td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>

        <div class="mt-3">
            <small class="text-muted">
                Gjeneruar më: @DateTime.Now.ToString("dd/MM/yyyy HH:mm:ss")
            </small>
        </div>
    }
    else
    {
        <div class="alert alert-warning">
            <i class="fas fa-exclamation-triangle"></i> Nuk ka ndryshime për kriteret e zgjedhura.
        </div>
    }
</div>

<style>
    @@media print {
        .btn { display: none !important; }
        body { font-size: 12px; }
        .table { font-size: 10px; }
    }
</style>
