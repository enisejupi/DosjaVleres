@model IEnumerable<KosovaDoganaModerne.Modelet.Entitetet.KomentiDeges>

@{
    ViewData["Title"] = "Komentet e Degëve - Raport";
    var dega = ViewData["Dega"] as string;
    var statusi = ViewData["Statusi"] as string;
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2><i class="fas fa-comments"></i> Raporti i komenteve nga degët</h2>
            <p class="text-muted mb-0">
                @if (!string.IsNullOrWhiteSpace(dega))
                {
                    <text>Dega: @dega</text>
                }
                @if (!string.IsNullOrWhiteSpace(statusi))
                {
                    <text> | Statusi: @statusi</text>
                }
            </p>
        </div>
        <div>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Kthehu
            </a>
            <a asp-action="KomentetDegeve_Excel" asp-route-dega="@ViewData["Dega"]" asp-route-dataFillimit="@ViewData["DataFillimit"]" asp-route-dataMbarimit="@ViewData["DataMbarimit"]" class="btn btn-success">
                <i class="fas fa-file-excel"></i> Eksporto në Excel
            </a>
            <button onclick="window.print()" class="btn btn-warning">
                <i class="fas fa-print"></i> Printo
            </button>
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="row mb-3">
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h3 class="text-primary">@Model.Count()</h3>
                        <p class="mb-0">Totali</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h3 class="text-warning">@Model.Count(k => !k.EshteLexuar)</h3>
                        <p class="mb-0">Pa Lexuar</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h3 class="text-success">@Model.Count(k => k.EshteZgjidhur)</h3>
                        <p class="mb-0">Zgjidhur</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h3 class="text-danger">@Model.Count(k => !k.EshteZgjidhur)</h3>
                        <p class="mb-0">Pa Zgjidhur</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-warning">
                            <tr>
                                <th>Nr.</th>
                                <th>Data</th>
                                <th>Dega</th>
                                <th>Kodi Tarifar</th>
                                <th>Mesazhi</th>
                                <th>Dërguar nga</th>
                                <th>Përgjigja</th>
                                <th>Statusi</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{ var nr = 1; }
                            @foreach (var koment in Model.OrderByDescending(k => k.DataDergimit))
                            {
                                <tr>
                                    <td>@nr</td>
                                    <td>@koment.DataDergimit.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td><strong>@koment.EmriDeges</strong></td>
                                    <td>@koment.KodiTarifar</td>
                                    <td>
                                        <small>@(koment.Mesazhi.Length > 50 ? koment.Mesazhi.Substring(0, 50) + "..." : koment.Mesazhi)</small>
                                    </td>
                                    <td>@koment.DergoPrejNga</td>
                                    <td>
                                        @if (!string.IsNullOrWhiteSpace(koment.Pergjigja))
                                        {
                                            <small>✓ @koment.DataPergjigjes?.ToString("dd/MM/yyyy")</small>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (koment.EshteZgjidhur)
                                        {
                                            <span class="badge bg-success">Zgjidhur</span>
                                        }
                                        else if (!koment.EshteLexuar)
                                        {
                                            <span class="badge bg-warning text-dark">I ri</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-info">Në pritje</span>
                                        }
                                    </td>
                                </tr>
                                nr++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="mt-3">
            <small class="text-muted">
                Gjeneruar më: @DateTime.Now.ToString("dd/MM/yyyy HH:mm:ss")
            </small>
        </div>
    }
    else
    {
        <div class="alert alert-warning">
            <i class="fas fa-exclamation-triangle"></i> Nuk ka komente për kriteret e zgjedhura.
        </div>
    }
</div>

<style>
    @@media print {
        .btn { display: none !important; }
        body { font-size: 12px; }
        .table { font-size: 11px; }
    }
</style>
