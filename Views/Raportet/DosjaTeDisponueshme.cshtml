@model IEnumerable<KosovaDoganaModerne.Modelet.Entitetet.VleraProduktit>

@{
    ViewData["Title"] = "Dosja e Disponueshme - Raport";
    var kategoria = ViewData["Kategoria"] as string;
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2><i class="fas fa-check-circle"></i> Dosja e vlerave të disponueshme</h2>
            <p class="text-muted mb-0">
                @if (!string.IsNullOrWhiteSpace(kategoria))
                {
                    <text>Kategoria: @kategoria</text>
                }
                else
                {
                    <text>Të gjitha vlerat aktive</text>
                }
            </p>
        </div>
        <div>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Kthehu
            </a>
            <a asp-action="DosjaTeDisponueshme_Excel" class="btn btn-success">
                <i class="fas fa-file-excel"></i> Eksporto në Excel
            </a>
            <button onclick="window.print()" class="btn btn-success">
                <i class="fas fa-print"></i> Printo
            </button>
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-success">
                            <tr>
                                <th>Nr.</th>
                                <th>Kodi tarifor</th>
                                <th>Emri i produktit</th>
                                <th>Vlera</th>
                                <th>Njësia</th>
                                <th>Vendi i origjinës</th>
                                <th>Data e regjistrimit</th>
                                <th>Burimi</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{ var nr = 1; }
                            @foreach (var vlera in Model.Where(v => v.Aktiv))
                            {
                                <tr>
                                    <td>@nr</td>
                                    <td><strong>@vlera.KodiTarifar</strong></td>
                                    <td>@vlera.EmriProduktit</td>
                                    <td class="text-end">@vlera.Vlera.ToString("N2") @vlera.Valuta</td>
                                    <td>@vlera.NjesiaMatese</td>
                                    <td>@vlera.VendiOrigjines</td>
                                    <td>@vlera.DataRegjistrimit.ToString("dd/MM/yyyy")</td>
                                    <td><small>@vlera.BurimiInformacionit</small></td>
                                </tr>
                                nr++;
                            }
                        </tbody>
                        <tfoot>
                            <tr class="table-light">
                                <td colspan="8">
                                    <strong>Totali i vlerave aktive:</strong> @Model.Count(v => v.Aktiv) produkte
                                </td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>

        <div class="alert alert-info mt-3">
            <i class="fas fa-info-circle"></i>
            <strong>Shënim:</strong> Ky raport përfshin vetëm vlerat aktive dhe të disponueshme për përdorim.
        </div>

        <div class="mt-3">
            <small class="text-muted">
                Gjeneruar më: @DateTime.Now.ToString("dd/MM/yyyy HH:mm:ss")
            </small>
        </div>
    }
    else
    {
        <div class="alert alert-warning">
            <i class="fas fa-exclamation-triangle"></i> Nuk ka vlera aktive për kriteret e zgjedhura.
        </div>
    }
</div>

<style>
    @@media print {
        .btn { display: none !important; }
        body { font-size: 12px; }
        .table { font-size: 11px; }
    }
</style>
