@model IEnumerable<KosovaDoganaModerne.Modelet.Entitetet.VleraProduktit>

@{
    ViewData["Title"] = "Dosja e Disponueshme - Raport";
    ViewData["PrintController"] = "Raportet";
    ViewData["PrintAction"] = "DosjaTeDisponueshme";
    ViewData["AdditionalParams"] = "";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2><i class="fas fa-check-circle"></i> Dosja e vlerave të disponueshme</h2>
            <p class="text-muted mb-0">
                Të gjitha vlerat aktive dhe të disponueshme
            </p>
        </div>
        <div class="d-flex gap-2">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Kthehu
            </a>
            <partial name="_PrintExcelButtons" />
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-success">
                            <tr>
                                <th>Nr.</th>
                                <th>Kodi</th>
                                <th>Emri i produktit</th>
                                <th>Përshkrimi</th>
                                <th>Vlera doganore</th>
                                <th>Njësia</th>
                                <th>Origjina</th>
                                <th>Kategoria</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{ var nr = 1; }
                            @foreach (var vlera in Model.Where(v => v.Eshte_Aktiv).OrderBy(v => v.Kodi).ThenBy(v => v.KodiProduktit))
                            {
                                <tr>
                                    <td>@nr</td>
                                    <td><strong>@vlera.KodiProduktit</strong></td>
                                    <td>@vlera.EmriProduktit</td>
                                    <td>@(vlera.Pershkrimi.Length > 50 ? vlera.Pershkrimi.Substring(0, 50) + "..." : vlera.Pershkrimi)</td>
                                    <td class="text-end">@vlera.VleraDoganore.ToString("N2") @vlera.Valuta</td>
                                    <td>@vlera.Njesia</td>
                                    <td>@vlera.Origjina</td>
                                    <td>@vlera.Kategoria</td>
                                </tr>
                                nr++;
                            }
                        </tbody>
                        <tfoot>
                            <tr class="table-light">
                                <td colspan="8">
                                    <strong>Totali i vlerave aktive:</strong> @Model.Count(v => v.Eshte_Aktiv) produkte
                                </td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>

        <div class="alert alert-info mt-3 no-print">
            <i class="fas fa-info-circle"></i>
            <strong>Shënim:</strong> Ky raport përfshin vetëm vlerat aktive dhe të disponueshme për përdorim.
            Të gjitha eksportimet dhe printimet logohen automatikisht për auditim të sigurisë.
        </div>

        <div class="mt-3 no-print">
            <small class="text-muted">
                Gjeneruar më: @DateTime.Now.ToString("dd/MM/yyyy HH:mm:ss")
            </small>
        </div>
    }
    else
    {
        <div class="alert alert-warning">
            <i class="fas fa-exclamation-triangle"></i> Nuk ka vlera aktive për t'u shfaqur.
        </div>
    }
</div>

<style>
    @@media print {
        .btn, .no-print { display: none !important; }
        body { font-size: 12px; }
        .table { font-size: 11px; }
    }
</style>
