@{
    ViewData["Title"] = "Paneli i Administratorit";
}

<div class="container mt-4">
    <h2><i class="fas fa-cog"></i> Paneli i Administratorit</h2>
    <p class="text-muted">Menaxhoni databazën, preferencat dhe konfiguracionet e sistemit</p>

    <div class="row mt-4">
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-database fa-3x text-primary mb-3"></i>
                    <h5 class="card-title">Skema e databazës</h5>
                    <p class="card-text">Shikoni strukturën e databazës, tabelat, kolonat dhe lidhjet</p>
                    <a asp-action="DatabaseSchema" class="btn btn-primary">
                        <i class="fas fa-eye"></i> Shiko skemën
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-table fa-3x text-success mb-3"></i>
                    <h5 class="card-title">Tabela Custom</h5>
                    <p class="card-text">Krijoni dhe menaxhoni tabelat tuaja të personalizuara</p>
                    <a asp-action="CustomTables" class="btn btn-success">
                        <i class="fas fa-plus"></i> Menaxho tabelat
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-print fa-3x text-info mb-3"></i>
                    <h5 class="card-title">Formatet e printimit</h5>
                    <p class="card-text">Dizajnoni formatet e printimit për raporte dhe dokumente</p>
                    <a asp-action="PrintFormats" class="btn btn-info">
                        <i class="fas fa-edit"></i> Menaxho formatet
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-palette fa-3x text-warning mb-3"></i>
                    <h5 class="card-title">Thema e ngjyrave</h5>
                    <p class="card-text">Ndryshoni ngjyrat e butonave, menuve dhe elementeve</p>
                    <a asp-action="ColorTheme" class="btn btn-warning">
                        <i class="fas fa-paint-brush"></i> Ndrysho temën
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-chart-bar fa-3x text-danger mb-3"></i>
                    <h5 class="card-title">Statistikat</h5>
                    <p class="card-text">Shikoni statistikat e përdorimit të sistemit</p>
                    <a asp-action="Statistics" class="btn btn-danger">
                        <i class="fas fa-chart-line"></i> Shiko statistikat
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-users fa-3x text-secondary mb-3"></i>
                    <h5 class="card-title">Përdoruesit</h5>
                    <p class="card-text">Menaxhoni përdoruesit dhe rolet e tyre</p>
                    <a href="/Identity/Account/Manage" class="btn btn-secondary">
                        <i class="fas fa-user-cog"></i> Menaxho përdoruesit
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="card mt-4">
        <div class="card-header bg-dark text-white">
            <h5 class="mb-0"><i class="fas fa-info-circle"></i> Informacion i sistemit</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <p><strong>Versioni:</strong> 1.0.0</p>
                    <p><strong>Databaza:</strong> SQLite</p>
                    <p><strong>Framework:</strong> ASP.NET Core 8.0</p>
                </div>
                <div class="col-md-6">
                    <p><strong>Serveri:</strong> @Environment.MachineName</p>
                    <p><strong>Data:</strong> @DateTime.Now.ToString("dd/MM/yyyy HH:mm:ss")</p>
                    <p><strong>Përdoruesi:</strong> @User.Identity?.Name</p>
                </div>
            </div>
        </div>
    </div>
</div>
