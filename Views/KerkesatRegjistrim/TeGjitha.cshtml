@model IEnumerable<KosovaDoganaModerne.Modelet.Entitetet.KerkeseRegjistrim>
@{
    ViewData["Title"] = "Të Gjitha Kërkesat e Regjistrimit";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-list"></i> Të Gjitha Kërkesat e Regjistrimit</h2>
        <div>
            <a asp-action="Index" class="btn btn-outline-primary">
                <i class="fas fa-clock"></i> Në pritje
            </a>
        </div>
    </div>

    @if (TempData["Sukses"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["Sukses"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card shadow">
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Nr.</th>
                                <th>Email</th>
                                <th>Emri i Plotë</th>
                                <th>Departamenti</th>
                                <th>Statusi</th>
                                <th>Data e Kërkesës</th>
                                <th>Data e Shqyrtimit</th>
                                <th>Veprime</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{int count = 1;}
                            @foreach (var kerkese in Model)
                            {
                                <tr>
                                    <td>@count</td>
                                    <td><i class="fas fa-envelope text-primary"></i> @kerkese.Email</td>
                                    <td>@(kerkese.EmriPlote ?? "-")</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(kerkese.Departamenti))
                                        {
                                            <span class="badge bg-info">@kerkese.Departamenti</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (kerkese.Statusi == "NePritje")
                                        {
                                            <span class="badge bg-warning text-dark">
                                                <i class="fas fa-clock"></i> Në pritje
                                            </span>
                                        }
                                        else if (kerkese.Statusi == "Aprovuar")
                                        {
                                            <span class="badge bg-success">
                                                <i class="fas fa-check"></i> Aprovuar
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">
                                                <i class="fas fa-times"></i> Refuzuar
                                            </span>
                                        }
                                    </td>
                                    <td><small>@kerkese.DataKerkeses.ToString("dd.MM.yyyy HH:mm")</small></td>
                                    <td>
                                        @if (kerkese.DataShqyrtimit.HasValue)
                                        {
                                            <small>@kerkese.DataShqyrtimit.Value.ToString("dd.MM.yyyy HH:mm")</small>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="Detajet" asp-route-id="@kerkese.Id" 
                                               class="btn btn-sm btn-outline-info" title="Shiko detajet">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            @if (kerkese.Statusi != "NePritje")
                                            {
                                                <button type="button" class="btn btn-sm btn-outline-danger" 
                                                        onclick="fshiKerkesen(@kerkese.Id, '@kerkese.Email')" title="Fshi">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            }
                                        </div>
                                    </td>
                                </tr>
                                count++;
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-inbox fa-4x text-muted mb-3"></i>
                    <h4 class="text-muted">Nuk ka kërkesa</h4>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function fshiKerkesen(id, email) {
            if (confirm('A jeni të sigurt që dëshironi të fshini kërkesën për: ' + email + '?')) {
                const form = document.createElement('form');
                form.method = 'POST';
                form.action = '@Url.Action("Fshi", "KerkesatRegjistrim")/' + id;
                
                const token = document.querySelector('input[name="__RequestVerificationToken"]').value;
                const tokenInput = document.createElement('input');
                tokenInput.type = 'hidden';
                tokenInput.name = '__RequestVerificationToken';
                tokenInput.value = token;
                form.appendChild(tokenInput);
                
                document.body.appendChild(form);
                form.submit();
            }
        }
    </script>
}
