@page
@model LoginModel
@{
    ViewData["Title"] = "Hyr";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6 col-lg-5">
        <div class="card shadow-lg border-0">
            <div class="card-header bg-primary text-white text-center py-4">
                <i class="fas fa-sign-in-alt fa-3x mb-3"></i>
                <h2 class="mb-0">@ViewData["Title"]</h2>
                <p class="mb-0 small">Hyni në llogarinë tuaj</p>
            </div>
            <div class="card-body p-5">
                @if (TempData["Info"] != null)
                {
                    <div class="alert alert-info alert-dismissible fade show" role="alert">
                        <i class="fas fa-info-circle"></i> @TempData["Info"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
                
                <form id="account" method="post">
                    <h4 class="mb-4 text-center text-muted">Mirë se vini përsëri!</h4>
                    
                    <div class="alert alert-info mb-4" role="alert">
                        <i class="fas fa-info-circle"></i> 
                        <strong>Autentifikim me Active Directory:</strong><br>
                        <small>
                            Përdorni username-in dhe fjalëkalimin tuaj të Active Directory. 
                            Nëse llogaria juaj nuk ekziston në sistem, do të krijohet automatikisht.
                        </small>
                    </div>
                    
                    <hr class="mb-4" />
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Username" class="form-control" autocomplete="username" 
                               aria-required="true" placeholder="emri.mbiemri" />
                        <label asp-for="Input.Username">
                            <i class="fas fa-user"></i> Username nga AD
                        </label>
                        <span asp-validation-for="Input.Username" class="text-danger"></span>
                        <small class="form-text text-muted mt-1">
                            P.sh: emri.mbiemri
                        </small>
                    </div>
                    
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" 
                               aria-required="true" placeholder="Fjalëkalimi" type="password" />
                        <label asp-for="Input.Password">
                            <i class="fas fa-lock"></i> Fjalëkalimi nga AD
                        </label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                        <small class="form-text text-muted mt-1">
                            Përdorni fjalëkalimin tuaj të Active Directory
                        </small>
                    </div>
                    
                    <div class="form-check mb-4">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        <label class="form-check-label" asp-for="Input.RememberMe">
                            <i class="fas fa-remember"></i> Më mbaj mend
                        </label>
                    </div>
                    
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary mb-3">
                        <i class="fas fa-sign-in-alt"></i> Hyr në sistem
                    </button>
                    
                    <div class="alert alert-warning text-center" role="alert">
                        <i class="fas fa-exclamation-triangle"></i> 
                        <strong>Kujdes:</strong> Regjistrimi manual është çaktivizuar. 
                        Përdorni kredencialet tuaja të Active Directory.
                    </div>
                </form>
            </div>
        </div>
        
        <div class="text-center mt-4">
            <small class="text-muted">
                <i class="fas fa-shield-alt"></i> Lidhja juaj është e mbrojtur dhe e sigurt
            </small>
            <br>
            <small class="text-muted mt-2 d-block">
                <i class="fas fa-question-circle"></i> 
                Probleme me hyrjen? Kontaktoni departamentin IT
            </small>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .card {
        border-radius: 15px;
        overflow: hidden;
    }
    .card-header {
        background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%) !important;
    }
    .btn-primary {
        background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
        border: none;
        padding: 12px;
        font-weight: 600;
        transition: transform 0.2s;
    }
    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(30, 60, 114, 0.4);
    }
    .form-floating > .form-control {
        border-radius: 8px;
        border: 2px solid #e0e7ff;
    }
    .form-floating > .form-control:focus {
        border-color: #2a5298;
        box-shadow: 0 0 0 0.2rem rgba(42, 82, 152, 0.25);
    }
    .form-check-input:checked {
        background-color: #2a5298;
        border-color: #2a5298;
    }
</style>
