@page
@model LoginModel
@{
    ViewData["Title"] = "Hyr";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6 col-lg-5">
        <div class="card shadow-lg border-0">
            <div class="card-header bg-primary text-white text-center py-4">
                <i class="fas fa-sign-in-alt fa-3x mb-3"></i>
                <h2 class="mb-0">@ViewData["Title"]</h2>
                <p class="mb-0 small">Hyni në llogarinë tuaj</p>
            </div>
            <div class="card-body p-5">
                <form id="account" method="post">
                    <h4 class="mb-4 text-center text-muted">Mirë se vini përsëri!</h4>
                    <hr class="mb-4" />
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" 
                               aria-required="true" placeholder="emri@shembull.com" />
                        <label asp-for="Input.Email">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" 
                               aria-required="true" placeholder="Fjalëkalimi" />
                        <label asp-for="Input.Password">Fjalëkalimi</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    
                    <div class="form-check mb-4">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        <label class="form-check-label" asp-for="Input.RememberMe">
                            Më mbaj mend
                        </label>
                    </div>
                    
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary mb-3">
                        <i class="fas fa-sign-in-alt"></i> Hyr
                    </button>
                    
                    <div class="text-center">
                        <p class="mb-2">
                            <a asp-page="./ForgotPassword" class="text-decoration-none">
                                <i class="fas fa-key"></i> Keni harruar fjalëkalimin?
                            </a>
                        </p>
                        <p class="mb-0">Nuk keni llogari?</p>
                        <a class="text-decoration-none" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">
                            <i class="fas fa-user-plus"></i> Regjistrohuni këtu
                        </a>
                    </div>
                </form>
            </div>
        </div>
        
        <div class="text-center mt-4">
            <small class="text-muted">
                <i class="fas fa-shield-alt"></i> Lidhja juaj është e mbrojtur dhe e sigurt
            </small>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .card {
        border-radius: 15px;
        overflow: hidden;
    }
    .card-header {
        background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%) !important;
    }
    .btn-primary {
        background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
        border: none;
        padding: 12px;
        font-weight: 600;
        transition: transform 0.2s;
    }
    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(30, 60, 114, 0.4);
    }
    .form-floating > .form-control {
        border-radius: 8px;
        border: 2px solid #e0e7ff;
    }
    .form-floating > .form-control:focus {
        border-color: #2a5298;
        box-shadow: 0 0 0 0.2rem rgba(42, 82, 152, 0.25);
    }
    .form-check-input:checked {
        background-color: #2a5298;
        border-color: #2a5298;
    }
</style>
