@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Ndrysho fjalëkalimin";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-3">
            <div class="card">
                <div class="card-header bg-company-blue text-white">
                    <h5><i class="fas fa-user-cog"></i> Menaxhimi</h5>
                </div>
                <div class="list-group list-group-flush">
                    <a asp-area="Identity" asp-page="/Account/Manage/Index" class="list-group-item list-group-item-action">
                        <i class="fas fa-user"></i> Profili
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-9">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h4><i class="fas fa-exclamation-triangle"></i> Funksion i çaktivizuar</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="fas fa-info-circle"></i>
                        <h5 class="mb-3">Ndryshimi i fjalëkalimit është çaktivizuar</h5>
                        <p class="mb-3">
                            Fjalëkalimet menaxhohen përmes Active Directory. 
                            Për të ndryshuar fjalëkalimin tuaj, ju lutem kontaktoni departamentin IT ose përdorni mjetet e Active Directory.
                        </p>
                    </div>

                    <div class="mt-4">
                        <a asp-area="Identity" asp-page="/Account/Manage/Index" class="btn btn-primary">
                            <i class="fas fa-arrow-left"></i> Kthehu në profil
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
