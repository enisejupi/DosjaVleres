@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Ndrysho fjalëkalimin";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-3">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5><i class="fas fa-user-cog"></i> Menaxhimi</h5>
                </div>
                <div class="list-group list-group-flush">
                    <a href="/Identity/Account/Manage" class="list-group-item list-group-item-action">
                        <i class="fas fa-user"></i> Profili
                    </a>
                    <a href="/Identity/Account/Manage/ChangePassword" class="list-group-item list-group-item-action active">
                        <i class="fas fa-key"></i> Ndrysho fjalëkalimin
                    </a>
                    <a href="/Identity/Account/Manage/Security" class="list-group-item list-group-item-action">
                        <i class="fas fa-shield-alt"></i> Siguria
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-9">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h4><i class="fas fa-key"></i> Ndrysho fjalëkalimin</h4>
                </div>
                <div class="card-body">
                    @if (Model.StatusMessage != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @Model.StatusMessage
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        
                        <div class="mb-3">
                            <label asp-for="Input.OldPassword" class="form-label">Fjalëkalimi i vjetër</label>
                            <input asp-for="Input.OldPassword" class="form-control" type="password" autocomplete="current-password" />
                            <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.NewPassword" class="form-label">Fjalëkalimi i ri</label>
                            <input asp-for="Input.NewPassword" class="form-control" type="password" autocomplete="new-password" />
                            <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                            <small class="form-text text-muted">
                                Fjalëkalimi duhet të ketë të paktën 6 karaktere, një shkronjë të madhe, një shkronjë të vogël dhe një numër.
                            </small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.ConfirmPassword" class="form-label">Konfirmo fjalëkalimin e ri</label>
                            <input asp-for="Input.ConfirmPassword" class="form-control" type="password" autocomplete="new-password" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="mt-4">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Ruaj ndryshimet
                            </button>
                            <a href="/Identity/Account/Manage" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Anulo
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
