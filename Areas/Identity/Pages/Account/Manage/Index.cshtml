@page
@model IndexModel
@{
    ViewData["Title"] = "Profili im";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-3">
            <div class="card">
                <div class="card-header bg-company-blue text-white">
                    <h5><i class="fas fa-user-cog"></i> Menaxhimi</h5>
                </div>
                <div class="list-group list-group-flush">
                    <a asp-area="Identity" asp-page="/Account/Manage/Index" class="list-group-item list-group-item-action active">
                        <i class="fas fa-user"></i> Profili
                    </a>
                    @if (Model.IsAdmin)
                    {
                        <a asp-controller="Admin" asp-action="Index" class="list-group-item list-group-item-action">
                            <i class="fas fa-users-cog"></i> Menaxho përdoruesit
                        </a>
                    }
                </div>
            </div>
        </div>
        <div class="col-md-9">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h4><i class="fas fa-user-circle"></i> Informacioni i profilit</h4>
                </div>
                <div class="card-body">
                    @if (TempData["Warning"] != null)
                    {
                        <div class="alert alert-warning alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-triangle"></i> @TempData["Warning"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                    
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i>
                        <strong>Profili juaj!</strong>
                        <p class="mb-0 mt-2">Këtu mund të shikoni informacionet tuaja personale. Të gjitha të dhënat menaxhohen nga Active Directory dhe nuk mund të ndryshohen drejtpërdrejt në sistem.</p>
                    </div>

                    @if (Model.CurrentUser != null)
                    {
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label"><strong><i class="fas fa-user"></i> Emri i plotë:</strong></label>
                                    <p class="form-control-plaintext">@Model.CurrentUser.EmriPlote</p>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label"><strong><i class="fas fa-envelope"></i> Email adresa:</strong></label>
                                    <p class="form-control-plaintext">@Model.CurrentUser.Email</p>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label"><strong><i class="fas fa-building"></i> Departamenti:</strong></label>
                                    <p class="form-control-plaintext">@(Model.CurrentUser.Departamenti ?? "N/A")</p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label"><strong><i class="fas fa-briefcase"></i> Pozicioni:</strong></label>
                                    <p class="form-control-plaintext">@(Model.CurrentUser.Pozicioni ?? "N/A")</p>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label"><strong><i class="fas fa-id-card"></i> Kodi i zyrtarit:</strong></label>
                                    <p class="form-control-plaintext">@(Model.CurrentUser.KodiZyrtarit ?? "N/A")</p>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label"><strong><i class="fas fa-shield-alt"></i> Roli:</strong></label>
                                    <p class="form-control-plaintext">
                                        @if (Model.IsAdmin)
                                        {
                                            <span class="badge bg-danger"><i class="fas fa-crown"></i> Administrator</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-primary"><i class="fas fa-user"></i> Përdorues</span>
                                        }
                                    </p>
                                </div>
                            </div>
                        </div>

                        <hr class="my-4">

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label"><strong><i class="fas fa-check-circle"></i> Statusi i llogarisë:</strong></label>
                                    <p class="form-control-plaintext">
                                        @if (Model.CurrentUser.EshteAktiv)
                                        {
                                            <span class="badge bg-success">Aktive</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Joaktive</span>
                                        }
                                    </p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label"><strong><i class="fas fa-calendar-alt"></i> Anëtarësuar më:</strong></label>
                                    <p class="form-control-plaintext">@Model.CurrentUser.DataKrijimit.ToString("dd/MM/yyyy HH:mm")</p>
                                </div>
                            </div>
                        </div>

                        <hr class="my-4">

                        <div class="alert alert-warning">
                            <i class="fas fa-exclamation-triangle"></i>
                            <strong>Shënim:</strong> Të gjitha ndryshimet në të dhënat personale (emër, email, fjalëkalim) bëhen përmes Active Directory. Ndryshimet do të sinkronizohen automatikisht gjatë hyrjes së radhës në sistem. Për çdo ndryshim, kontaktoni departamentin IT.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .form-control-plaintext {
        background-color: #f8f9fa;
        padding: 0.5rem 0.75rem;
        border-radius: 0.25rem;
        border: 1px solid #e0e6ed;
    }
</style>
