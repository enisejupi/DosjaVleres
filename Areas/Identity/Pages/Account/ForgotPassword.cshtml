@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Keni harruar fjalëkalimin?";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6 col-lg-5">
        <div class="card shadow-lg border-0">
            <div class="card-header bg-warning text-dark text-center py-4">
                <i class="fas fa-key fa-3x mb-3"></i>
                <h2 class="mb-0">@ViewData["Title"]</h2>
                <p class="mb-0 small">Rivendosni fjalëkalimin tuaj</p>
            </div>
            <div class="card-body p-5">
                <form method="post">
                    <h4 class="mb-4 text-center text-muted">Shkruani email adresën tuaj</h4>
                    <hr class="mb-4" />
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    
                    <div class="form-floating mb-4">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" 
                               aria-required="true" placeholder="emri@shembull.com" />
                        <label asp-for="Input.Email">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    
                    <button type="submit" class="w-100 btn btn-lg btn-warning mb-3">
                        <i class="fas fa-paper-plane"></i> Dërgo link për rivendosje
                    </button>
                    
                    <div class="text-center">
                        <a asp-page="./Login" class="text-decoration-none">
                            <i class="fas fa-arrow-left"></i> Kthehu në hyrje
                        </a>
                    </div>
                </form>
            </div>
        </div>
        
        <div class="alert alert-info mt-4" role="alert">
            <i class="fas fa-info-circle"></i> 
            <strong>Shënim:</strong> Ky funksion aktualisht nuk është i konfiguruar. Për të rivendosur fjalëkalimin, kontaktoni administratorin e sistemit.
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .card {
        border-radius: 15px;
        overflow: hidden;
    }
    .btn-warning {
        font-weight: 600;
        transition: transform 0.2s;
    }
    .btn-warning:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(255, 193, 7, 0.4);
    }
    .form-floating > .form-control {
        border-radius: 8px;
        border: 2px solid #e0e7ff;
    }
    .form-floating > .form-control:focus {
        border-color: #ffc107;
        box-shadow: 0 0 0 0.2rem rgba(255, 193, 7, 0.25);
    }
</style>
