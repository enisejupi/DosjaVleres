@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Keni harruar fjalëkalimin?";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6 col-lg-5">
        <div class="card shadow-lg border-0">
            <div class="card-header bg-warning text-dark text-center py-4">
                <i class="fas fa-exclamation-triangle fa-3x mb-3"></i>
                <h2 class="mb-0">Funksion i çaktivizuar</h2>
                <p class="mb-0 small">Rivendosja e fjalëkalimit nuk është e disponueshme</p>
            </div>
            <div class="card-body p-5">
                <div class="alert alert-warning text-center" role="alert">
                    <i class="fas fa-info-circle"></i> 
                    <h5 class="mb-3">Rivendosja e fjalëkalimit është çaktivizuar</h5>
                    <p class="mb-3">
                        Fjalëkalimet menaxhohen përmes Active Directory. 
                        Për të ndryshuar apo rivendosur fjalëkalimin tuaj, ju lutem kontaktoni departamentin IT.
                    </p>
                </div>
                
                <div class="text-center mt-4">
                    <a asp-page="./Login" class="btn btn-primary">
                        <i class="fas fa-arrow-left"></i> Kthehu në hyrje
                    </a>
                </div>
            </div>
        </div>
        
        <div class="text-center mt-4">
            <small class="text-muted">
                <i class="fas fa-question-circle"></i> 
                Probleme me hyrjen? Kontaktoni departamentin IT
            </small>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 15px;
        overflow: hidden;
    }
</style>
