@page
@model RegisterModel
@{
    ViewData["Title"] = "Regjistrim i çaktivizuar";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6 col-lg-5">
        <div class="card shadow-lg border-0">
            <div class="card-header bg-warning text-dark text-center py-4">
                <i class="fas fa-exclamation-triangle fa-3x mb-3"></i>
                <h2 class="mb-0">Regjistrimi i Çaktivizuar</h2>
            </div>
            <div class="card-body p-5 text-center">
                <div class="alert alert-info" role="alert">
                    <h4 class="alert-heading">
                        <i class="fas fa-info-circle"></i> Informacion i Rëndësishëm
                    </h4>
                    <hr>
                    <p class="mb-3">
                        Regjistrimi manual në sistem është çaktivizuar. Sistemi përdor 
                        <strong>Active Directory</strong> për autentifikim.
                    </p>
                    <p class="mb-0">
                        Ju lutem përdorni <strong>kredencialet tuaja të Active Directory</strong> 
                        për të hyrë në sistem.
                    </p>
                </div>

                <div class="my-4">
                    <h5 class="text-muted mb-3">Si të hyjë në sistem?</h5>
                    <ol class="text-start">
                        <li class="mb-2">
                            <i class="fas fa-user text-primary"></i> 
                            Përdorni username-in tuaj të Active Directory (p.sh. emri.mbiemri)
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-key text-primary"></i> 
                            Përdorni fjalëkalimin tuaj të Active Directory
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-sign-in-alt text-primary"></i> 
                            Klikoni butonin "Hyr në sistem" në faqen e hyrjes
                        </li>
                    </ol>
                </div>

                <div class="alert alert-warning" role="alert">
                    <i class="fas fa-shield-alt"></i> 
                    <strong>Siguria:</strong> Nëse llogaria juaj ekziston në Active Directory, 
                    do të krijohet automatikisht në sistem gjatë hyrjes së parë.
                </div>

                <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="btn btn-lg btn-primary w-100 mt-3">
                    <i class="fas fa-arrow-right"></i> Shko te faqja e hyrjes
                </a>
            </div>
        </div>
        
        <div class="text-center mt-4">
            <small class="text-muted">
                <i class="fas fa-question-circle"></i> 
                Nëse keni probleme me hyrjen, kontaktoni departamentin IT
            </small>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 15px;
        overflow: hidden;
    }
    .card-header {
        background: linear-gradient(135deg, #ffc107 0%, #ffb300 100%) !important;
    }
    .btn-primary {
        background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
        border: none;
        padding: 12px;
        font-weight: 600;
        transition: transform 0.2s;
    }
    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(30, 60, 114, 0.4);
    }
    ol li {
        padding: 8px 0;
    }
</style>
